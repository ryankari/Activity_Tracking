{
    "api": {
        "max_activities": 3000,
        "batch_size": 100,
        "default_use_api": false
    },
    "files": {
        "summary_file": "garminSummaryData.xlsx",
        "splits_file": "garminSplitData.xlsx",
        "other_data_file": "OtherData.xlsx"
    },
    "calendarplot": {
        "default_plot_style": "modern",
        "calendar_days_shown": 28,
        "font_size": 10,
        "datePosition": -0.36,
        "trainingEffectLength":12,
        "includeRunning": true,
        "includeCycling": true,
        "includeSwimming": false,
        "includeWorkouts": true
    },
    "tss": {
        "weight_lbs": 170,
        "threshold_pace_min_per_mi": 6.25,
        "gain_factor": 0.0005,
        "loss_factor": 0.00015,
        "ctl_const": 42,
        "atl_const": 7
    },
    "plotting": {
        "font_size": 10,
        "line_width": 2,
        "marker_size": 5,
        "split_threshold":7.0,
        "race_ylim_min": 6,
        "race_ylim_max": 10.0,
        "split_ylim_min": 4,
        "split_ylim_max": 11
    },
    "AI_format": {
        "total_summary_files": 25,
        "total_split_files":3,
        "hms_threshold_limit": 90,
        "create_prompt_only": false
    },
    "activity_styles": {
        "Running": {
            "color_race": "red",
            "color": "skyblue",
            "size_metric": "distance",
            "label_metric": "distance",
            "label_format": "{:.1f}",
            "default_size": 300
        },
        "Cycling": {
            "color": "orange",
            "size_metric": null,
            "label_metric": "distance",
            "label_format": "{:.1f}",
            "default_size": 400
        },
        "Swimming": {
            "color": "lightblue",
            "size_metric": null,
            "label_metric": "duration",
            "label_format": "{:.0f}",
            "default_size": 250
        },
        "Workouts": {
            "color": "green",
            "size_metric": null,
            "label_metric": "duration",
            "label_format": "{:.0f}",
            "default_size": 250
        }
    }
}